{
  "version": 2,
  "builds": [
    {
      "src": "LordsonAdmin/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb", "runtime": "python3.11" }
    },
    {
      "src": "staticfiles_build/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles_build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "LordsonAdmin/wsgi.py"
    }
  ]
}
