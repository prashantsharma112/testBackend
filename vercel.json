{
  "version": 2,
  "builds": [
    {
      "src": "LordsonAdmin/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb", "runtime": "python3.11" }
    },
    {
      "src": "staticfiles_build/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles_build/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "LordsonAdmin/wsgi.py"
    }
  ],
  "buildCommand": "python3 manage.py collectstatic --noinput"
}
